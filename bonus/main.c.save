#include <stdio.h>
#include <stdlib.h>

int main()
{
    double I,sum;
    printf("Please input the interest of this month:");
    scanf("%lf",&I);
    if(I<=100000)sum=I*10.0/100.0;
    else if(I<=200000)sum=100000*10/100.0+(I-100000)*7.5/100.0;
    else if(I<=400000)sum=100000*10/100.0+100000*7.5/100+(I-200000)*5/100.0;
    else if(I<=600000)sum=100000*10/100+100000*7.5/100+200000*5/100+(I-400000)*3/100;
    else if(I<=1000000)sum=100000*10/100+100000*7.5/100+200000*5/100+200000*3/100+(I-600000)*1.5/100;
    else sum=100000*10/100+100000*7.5/100+200000*5/100+200000*3/100+400000*1.5/100+(I-1000000)*1/100;
    printf("Bonus=%.2lf",sum);
    return 0;
}
